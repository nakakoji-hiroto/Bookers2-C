<div class='container px-5 px-sm-0'>
  <%= flash[:notice] %>
  <div class='row'>
    <div class='col-md-3'>
      <h2>User info</h2>
      <%= render 'users/info', user: @user %>
      <h2 class="mt-3">New book</h2>
      <%= render 'books/form', book: @book %>
    </div>
    <div class='col-md-8 offset-md-1'>
      <h2>Group Detail</h2>
      <table class='table table-hover table-inverse'>
        <thead>
          <tr>
            <th>イメージ</th>
            <th>グループ名</th>
            <th>紹介文</th>
            <th>メンバー</th>
            <th colspan="3"></th>
          </tr>
        </thead>
        <tbody>
            <tr>
              <td><%= image_tag @group.get_group_image, size: '50x50' %></td>
              <td><%= @group.name %></td>
              <td><%= @group.introduction %></td>
              <td>
                <% @group.users.each do |user| %>
                  <li style="list-style: none;"><%= user.name %></li>
                <% end %>
              </td>
              <% if @group.is_owned_by?(current_user) %>
                <td><%= link_to 'Edit', edit_group_path(@group), class: "btn btn-success" %></td>
              <% else %>
                <% unless @group.includesUser?(current_user) %>
                  <td><%= link_to 'Join this group', group_group_users_path(@group), method: :post, class: "btn btn-sm btn-success" %></td>
                <% else %>
                  <td><%= link_to 'Leave this group', group_group_users_path(@group), method: :delete, class: "btn btn-sm btn-danger" %></td>
                <% end %>
              <% end %>
            </tr>
        </tbody>
      </table>
    </div>
  </div>
</div>